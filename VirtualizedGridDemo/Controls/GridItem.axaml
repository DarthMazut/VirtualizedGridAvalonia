<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VirtualizedGridDemo.Controls.GridItem">
	<Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Background="MediumSeaGreen" Margin="5">
		<StackPanel Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="{Binding Text}" Foreground="Black" />
			<CheckBox IsChecked="{Binding IsChecked}" />
			<ScrollViewer />
		</StackPanel>
	</Grid>
</UserControl>
