<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VirtualizedGridDemo.Controls.GridItem"
			 xmlns:vm="clr-namespace:VirtualizedGridDemo.ViewModels"
			 IsVisible="{Binding Visible}"
			 >

	<Border Background="MediumSeaGreen" Margin="0" BorderThickness="2" BorderBrush="Green">
		<StackPanel>
			<TextBlock Text="{Binding Text}" Foreground="Black" />
			<CheckBox IsChecked="{Binding IsChecked}"/>
			<!--<Border Width="17" Height="17" BorderBrush="Black" BorderThickness="1" Classes="HoverBorder"/>-->
			<!--<TextBox Text="{Binding Text}" />-->
		</StackPanel>
	</Border>
</UserControl>
